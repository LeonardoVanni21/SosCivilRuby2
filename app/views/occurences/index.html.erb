<%= render 'shared/menu' %>
<p id="notice"><%= notice %></p>

<h1>Occurences</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Deliverydate</th>
      <th>Request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occurences.each do |occurence| %>
      <tr>
        <td><%= occurence.status %></td>
        <td><%= occurence.deliveryDate %></td>
        <% occurence.requests.each do |request| %>
      <td><%= request.details %></td>
    <% end %>
        <td><%= link_to 'Show', occurence %></td>
        <td><%= link_to 'Edit', edit_occurence_path(occurence) %></td>
        <td><%= link_to 'Destroy', occurence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Occurence', new_occurence_path %>
